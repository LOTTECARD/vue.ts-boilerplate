{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "types": ["webpack-env"],
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"],
            "@stores/*": ["src/store/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": ["src/main.ts"],
    "exclude": ["node_modules"],
    "files": ["src/shims-vue.d.ts"]
}
